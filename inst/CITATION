citHeader("To cite brokenstick in publications use:")

bibentry(
  bibtype      = "Article",
  title        = "Broken Stick Model for Irregular Longitudinal Data",
  author       = personList(as.person("Stef van Buuren")),
  journal      = "Journal of Statistical Software",
  year         = "2022",
  volume       = "Submitted for publication",
  number       = "X",
  pages        = "X-X",
  url          = "https://github.com/growthcharts/brokenstick")

  textVersion  =
  paste("Stef van Buuren (2022)",
        "Broken Stick Model for Irregular Longitudinal Data",
        "Journal of Statistical Software", "Submitted for publication",
        "https://github.com/growthcharts/brokenstick.", sep = ", ")
